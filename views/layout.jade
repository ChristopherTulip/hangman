    title #{title}
  body
    header  
      .container 
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
          p.navbar-brand Hangman
          p#lives
          ul.navbar-nav.mr-auto

          form.form-inline.my-2.my-lg-0
            input.form-control.mr-sm-2#input( type="search" placeholder="Search" aria-label="Search" )
            button.btn.btn-outline-success.my-2.my-sm-0#guess( type="button") Search
          button.btn.btn-outline-info#reset( type="button") Reset

    block content

    footer 
      .container
        .row

    script( type="text/javascript" src="/scripts/hangman.js" )
